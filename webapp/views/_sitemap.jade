doctype html
html
    head
        title HTML Dummy
        style(type="text/css").
            body {
                background-color: #eee;
                font-family: Verdana, sans-serif;
                font-size: 14px;
            }
            fieldset {
                padding: 0px;
                border: 1px solid #ccc;
                margin-bottom: 10px;
            }
            legend {
                padding: 2px 10px;
                background: #ddd;
                font-weight: bold;
                border: 1px solid #ccc;
                margin-left: 10px;
            }
    body
        h1 Static HTML Factory &raquo; Sitemap
        each path in sitemap.paths
            fieldset
                legend=path
                ul
                    each url in sitemap.urlsByPath[path]
                        li
                            a(href=path.replace(/^\//,'')+url)= url

        include layout/_factory-helper
